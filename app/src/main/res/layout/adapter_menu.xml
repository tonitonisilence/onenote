<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgLeftView"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_margin="10.0dip">

        <onenote.guagnzhou.com.onenote.views.CircleImageView
            xmlns:viewattr="http://schemas.android.com/apk/value/org.paychina.mobile.declare-styleable"
            android:id="@+id/iv_photo"
            android:layout_width="78.0dip"
            android:layout_height="78.0dip"
            android:layout_gravity="center"
            viewattr:border_color="@color/colorBgLeftDivder"
            viewattr:border_width="0.5dp" />

        <LinearLayout
            android:id="@+id/ll_photo"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/bg_left_photo"
            android:orientation="horizontal"></LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/TextLeftViewTitle"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/ic_leftview_home"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/text_title"
            style="@style/TextLeftViewTitle"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="code" />
    </LinearLayout>

</LinearLayout>